@model Centroware.Model.ViewModels.Settings.MainSettingVm
@{ ViewData["Title"] = "Main Settings"; }
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">Main Settings</h3>
    </div>
    <div class="card-body">
        @if (TempData["Meesage"] != null)
        {
<div class="alert alert-custom alert-light-success fade show mb-5" role="alert">
    <div class="alert-icon"><i class="flaticon-calendar-3"></i></div>
    <div class="alert-text">@TempData["Meesage"]</div>
    <div class="alert-close">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="ki ki-close"></i></span>
        </button>
    </div>
</div>}
    <form asp-action="MainSetting" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label asp-for="FacebookUrl" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-facebook"></i>
                                </span>
                            </div>
                            <input asp-for="FacebookUrl" type="text" class="form-control" placeholder="Facebook Url">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label asp-for="InstagramUrl" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-instagram"></i>
                                </span>
                            </div>
                            <input asp-for="InstagramUrl" type="text" class="form-control" placeholder="Instagram Url">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label asp-for="LinkedInUrl" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-linkedin"></i>
                                </span>
                            </div>
                            <input asp-for="LinkedInUrl" type="text" class="form-control" placeholder="LinkedIn Url">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label asp-for="YoutubeUrl" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-youtube"></i>
                                </span>
                            </div>
                            <input asp-for="YoutubeUrl" type="text" class="form-control" placeholder="Youtube Url">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group row">
                    <label asp-for="ContactUsTitle" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-comments"></i>
                                </span>
                            </div>
                            <input asp-for="ContactUsTitle" type="text" class="form-control" placeholder="Contact Us">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label asp-for="Mobile" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-mobile"></i>
                                </span>
                            </div>
                            <input asp-for="Mobile" type="text" class="form-control" placeholder="Mobile">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label asp-for="Email" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-envelope"></i>
                                </span>
                            </div>
                            <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group row">
                    <label asp-for="Address" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-map-marker"></i>
                                </span>
                            </div>
                            <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label asp-for="Longtude" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-map-marker"></i>
                                </span>
                            </div>
                            <input asp-for="Longtude" type="text" class="form-control" placeholder="Longtude">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label asp-for="Latetude" class="pl-3"></label>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group" id="kt_daterangepicker_3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="la la-map-marker"></i>
                                </span>
                            </div>
                            <input asp-for="Latetude" type="text" class="form-control" placeholder="Latetude">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*la la-image*@

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <div class="custom-file">
                        <input asp-for="Image" type="file" class="custom-file-input" id="Image">
                        <label class="custom-file-label" for="Image">Choose file</label>

                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-primary font-weight-bold mr-2">Submit</button>
        </div>
    </form>
    </div>
    <!--end::Form-->
</div>

@section Scripts{
    <script>
        PageLoadActions();
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
