@model Centroware.Model.ViewModels.Settings.AboutSettingVm
@{ ViewData["Title"] = "About Settings"; }
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">About Settings</h3>
    </div>
    <div class="card-body">
        @if (TempData["Meesage"] != null)
        {
<div class="alert alert-custom alert-light-success fade show mb-5" role="alert">
    <div class="alert-icon"><i class="flaticon-calendar-3"></i></div>
    <div class="alert-text">@TempData["Meesage"]</div>
    <div class="alert-close">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="ki ki-close"></i></span>
        </button>
    </div>
</div>}
    <form asp-action="AboutSetting" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AboutFirstTitel"></label>
                    <input asp-for="AboutFirstTitel" class="form-control" />
                    <span asp-validation-for="AboutFirstTitel" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AboutSecondTitel"></label>
                    <input asp-for="AboutSecondTitel" class="form-control" />
                    <span asp-validation-for="AboutSecondTitel" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="IsActiveSlider"></label>
                    <span class="switch">
                        <label>
                            <input asp-for="IsActiveSlider" id="IsActiveSlider" type="checkbox" checked="@Model.IsActiveSlider" value="@Model.IsActiveSlider" />
                            <span></span>
                        </label>
                    </span>
                    <span asp-validation-for="IsActiveSlider" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="IsActiveCulture"></label>
                    <span class="switch">
                        <label>
                            <input asp-for="IsActiveCulture" id="IsActiveCulture" type="checkbox" checked="@Model.IsActiveCulture" value="@Model.IsActiveCulture" />
                            <span></span>
                        </label>
                    </span>
                    <span asp-validation-for="IsActiveCulture" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="OurTeamFirstTitle"></label>
                    <input asp-for="OurTeamFirstTitle" class="form-control" />
                    <span asp-validation-for="OurTeamFirstTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="OurTeamSoccondTitle"></label>
                    <input asp-for="OurTeamSoccondTitle" class="form-control" />
                    <span asp-validation-for="OurTeamSoccondTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="IsActiveOurTeam"></label>
                    <span class="switch">
                        <label>
                            <input asp-for="IsActiveOurTeam" id="IsActiveOurTeam" type="checkbox" checked="@Model.IsActiveOurTeam" value="@Model.IsActiveOurTeam" />
                            <span></span>
                        </label>
                    </span>
                    <span asp-validation-for="IsActiveSlider" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="IsActiveWorks"></label>
                    <span class="switch">
                        <label>
                            <input asp-for="IsActiveWorks" id="IsActiveWorks" type="checkbox" checked="@Model.IsActiveWorks" value="@Model.IsActiveWorks" />
                            <span></span>
                        </label>
                    </span>
                    <span asp-validation-for="IsActiveWorks" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="WeDoTitle"></label>
                    <input asp-for="WeDoTitle" class="form-control" />
                    <span asp-validation-for="WeDoTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="HeadlineCulture"></label>
                    <input asp-for="HeadlineCulture" class="form-control"/>
                    <span asp-validation-for="HeadlineCulture" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="JoinUsTitle"></label>
                    <input asp-for="JoinUsTitle" class="form-control" />
                    <span asp-validation-for="JoinUsTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="JoinUsSubTitle"></label>
                    <input asp-for="JoinUsSubTitle" class="form-control" />
                    <span asp-validation-for="JoinUsSubTitle" class="text-danger"></span>
                </div>
            </div>
          
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="JoinUsImage"></label>
                        <div class="custom-file">
                            <input asp-for="JoinUsImage" type="file" class="custom-file-input" id="Image">
                            <label class="custom-file-label" for="Image">Choose file</label>

                        </div>
                        <span asp-validation-for="JoinUsImage" class="text-danger"></span>
                    </div>
                </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OurTeamDescription"></label>
                    <textarea rows="5" asp-for="OurTeamDescription" class="form-control"></textarea>
                    <span asp-validation-for="OurTeamDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="WeDoDescription"></label>
                    <textarea rows="5" asp-for="WeDoDescription" class="form-control"></textarea>
                    <span asp-validation-for="WeDoDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary font-weight-bold mr-2">Submit</button>
        </div>
    </form>
    </div>
    <!--end::Form-->
</div>

@section Scripts{
    <script>
        PageLoadActions();
    </script>
    <script>
        $("#IsActiveSlider").on('change', function () {
            var isCheck = $(this).val();
            if (isCheck.toLowerCase() == "false") {
                $(this).val('true');
            }
            else {
                $(this).val('false');
            }
        });
        $("#IsActiveOurTeam").on('change', function () {
            var isCheck = $(this).val();
            if (isCheck.toLowerCase() == "false") {
                $(this).val('true');
            }
            else {
                $(this).val('false');
            }
        });
        $("#IsActiveWorks").on('change', function () {
            var isCheck = $(this).val();
            if (isCheck.toLowerCase() == "false") {
                $(this).val('true');
            }
            else {
                $(this).val('false');
            }
        });
        $("#IsActiveCulture").on('change', function () {
            var isCheck = $(this).val();
            if (isCheck.toLowerCase() == "false") {
                $(this).val('true');
            }
            else {
                $(this).val('false');
            }
        });
    </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
