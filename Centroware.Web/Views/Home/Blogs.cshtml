@model Centroware.Model.ViewModels.HomeVms.BlogVm
@{ ViewData["Title"] = "Blog"; }
<section class="menu-bg"></section>
<section class="header-space"></section>
<section class="category-header works-header">
    <div class="in">
        <div class="table">
            <div class="table-cell title">
                <div class="sline wow animate__sline" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: sline;"></div>
                <div class="d-out">
                    <span class="wow animate__matrixUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: matrix;"><span class="d-title">Our</span></span>
                </div>
                <div class="d-out">
                    <span class="wow animate__matrixUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: matrix;"><span class="d-title">Blog</span></span>
                </div>
                <span class="float-sumbol wow animate__fadeIn animate__animated" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeIn;"></span>
            </div>
            <div class="table-cell description wow animate__fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                <p>@Model.About.BlogTitel</p>
            </div>
        </div>
    </div>
</section>
<div id='toScroll'></div>
<section class="more_works hide-in-desctop wow animate__fadeInUp" data-wow-duration="1s">
    <div class="inside">
        <div class='title'>
            <p><strong>Posts</strong></p>
        </div>
        <div class="post-object">
            @foreach (var item in Model.Posts)
            {
                <div class="item" style="width: 50%;">
                    <a href='/Home/Blog/@item.Id' class="portfolio "
                       data-cat="" aria-label="Leumi &#8211; Digital Account">
                        <div class="portfolio-wrapper"
                             style="background-image:url(/Images/@item.Image)">
                            <img src=/Images/@item.Image alt='' />
                            <div class="label">
                                <div class="label-text">
                                    <div class="text-title">Leumi &#8211; @item.Title</div> <span class="text-category" style="font-family: 'Montserrat',Arial,sans-serif;font-size: .7rem;"> @item.CreatedAt</span>
                                  
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>
</section>


