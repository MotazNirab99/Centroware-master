@model Centroware.Model.ViewModels.Blog.PostsVm
@{ ViewData["Title"] = "Blog"; }

<section class="menu-bg"></section>
<section class="header-space"></section>
<section class='work-header show-gradient b-lazy'
         data-src="@Model.Image">
    <div class="in">
        <div class="table">
            <div class="table-cell">
                <h1>@Model.Title</h1>

                <p style="font-size: .6rem;font-weight: bold;">@Model.CreatedAt</p>
            </div>
        </div>
    </div>
</section>
<div id='toScroll'></div>
<section class="grid-three  wow animate__fadeInUp" data-wow-duration="1s"
         style="visibility: visible; animation-duration: 1s; animation-name: fadeInUp;">
    
</section>
<section class="work-about" style="    padding-top: 0; !important">
    <div class="in">
        <ul class="list">
            <li>
                <div class="title"></div>
                <div class="desc">
                    <p class="p1">
                       @Model.Description
                    </p>
                  
                </div>
                <div class="title" style="margin-top: 2rem;">about</div>
                <a href="#" rel="nofollow" class="read-more hide-in-desctop" aria-label=""><span></span></a>
            </li>
        </ul>
    </div>
</section>